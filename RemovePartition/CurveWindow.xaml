<Window x:Class="RemovePartition.CurveWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:RemovePartition"
        mc:Ignorable="d"
        Title="CurveWindow" Height="400" Width="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,5,5,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Content="主要方法" VerticalAlignment="Center" Grid.Row="0"/>
            <ComboBox x:Name="MainMethod_CB" Margin="5,5,5,5" Grid.Column="1" Grid.Row="0"/>

            <Label Content="通量方法" VerticalAlignment="Center" Grid.Row="1"/>
            <ComboBox x:Name="FluxMethod_CB" Margin="5,5,5,5" Grid.Column="1" Grid.Row="1"/>

            <Label Content="推进方法" VerticalAlignment="Center" Grid.Row="2"/>
            <ComboBox x:Name="AdvanceMethod_CB" Margin="5,5,5,5" Grid.Column="1" Grid.Row="2"/>

            <Label Content="颜色" VerticalAlignment="Center" Grid.Row="3"/>
            <xctk:ColorPicker x:Name="CurveColor_CP" Margin="5,5,5,5" Grid.Column="1" Grid.Row="3"/>
        </Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="5,5,5,5">
            <Button x:Name="OK_BT" Content="确定" Width="70" Margin="5,5,5,5" Click="OK_BT_Click"/>
            <Button x:Name="KO_BT" Content="取消" Width="70" Margin="5,5,5,5" Click="KO_BT_Click"/>
        </StackPanel>
    </Grid>
</Window>
