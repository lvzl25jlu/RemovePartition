<Window x:Class="RemovePartition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemovePartition"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="5,5,5,5">
            <!--初态参数-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Label Content="分隔位置"/>
                    <Slider Width="200" Value="50" Maximum="99" Minimum="1" x:Name="PartitionPosition_Sld"/>
                </StackPanel>
                <Grid Grid.Column="0" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="左侧密度" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="LDensity_TB"  Grid.Row="0" Grid.Column="1"/>
                    <Label Content="左侧压强" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="LPressure_TB" Grid.Row="1" Grid.Column="1"/>
                </Grid>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label Content="右侧密度" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="RDensity_TB"  Grid.Row="0" Grid.Column="1"/>
                    <Label Content="右侧压强" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <TextBox x:Name="RPressure_TB"  Grid.Row="1" Grid.Column="1"/>
                </Grid>
            </Grid>
            <!--两个选项-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <CheckBox x:Name="IdealGas_CB" Content="理想气体" IsChecked="True" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center" Click="IdealGas_CB_Click"/>
                <CheckBox x:Name="DynamicInterval_CB" Content="动态步长" IsChecked="False" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Click="DynamicInterval_CB_Click"/>
            </Grid>
            <!--网格参数-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label  Content="Δx" Grid.Row="0"  Grid.Column="0" />
                <TextBox x:Name="DeltaX_TB"   Grid.Row="0"  Grid.Column="1" Width="50" IsEnabled="False"/>
                <Label Content="Δt" Grid.Row="1"  Grid.Column="0"/>
                <TextBox x:Name="DeltaT_TB"  Grid.Row="1"  Grid.Column="1" Width="50"/>
                <Label Content="CFL" Grid.Row="2"  Grid.Column="0"/>
                <TextBox x:Name="CFL_TB" Grid.Row="2"  Grid.Column="1"  Width="50"/>
            </Grid>
            <!--信息展示-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label Content="当前时刻" Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="CurTime_TB" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Label Content="当前步数" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="StepCnt_TB" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <!--几个按钮-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="Remove_Btn" Grid.Column="0"  Grid.Row="0" Content="移除分隔" Margin="5,5,5,5" Click="Remove_Btn_Click"/>
                <Button x:Name="Reset_Btn" Grid.Column="1"   Grid.Row="0" Content="重置状态" Margin="5,5,5,5" Click="Reset_Btn_Click" />
                <Grid Grid.Column="0"  Grid.Row="1" Grid.ColumnSpan="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button x:Name="Advace_Btn" Grid.Column="0"  Content="推进" Margin="5,5,5,5" Padding="5,0,5,0" Click="Advance_Btn_Click"/>
                    <TextBox x:Name="StepNum_TB" Text="1000"  Grid.Column="1" VerticalAlignment="Center"  />
                    <Label Content="步" Grid.Column="2" VerticalAlignment="Center" HorizontalContentAlignment="Center"/>
                </Grid>
            </Grid>
            <StackPanel x:Name="CurvePanel" Orientation="Horizontal"></StackPanel>
            <Button x:Name="AddCurve_Btn" Content="添加曲线" Click="AddCurve_Btn_Click" Margin="5,10" Padding="5,0" />
        </StackPanel>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="密&#x000A;&#x000A;度" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Grid Grid.Column="1" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition  Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="2" x:Name="DensityMax_TB" TextWrapping="NoWrap" VerticalAlignment="Bottom"/>
                <Canvas Grid.Row="1" Background="LightGray"  x:Name="Density_Canvas" Margin="5,5,5,5"/>
                <TextBlock Grid.Row="2" Text="0" x:Name="DensityMinTextBlock"  TextWrapping="NoWrap" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="速&#x000A;&#x000A;度" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
            <Grid Grid.Column="1" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition  Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="1" x:Name="VelocityMax_TB" TextWrapping="NoWrap" VerticalAlignment="Bottom"/>
                <Canvas Grid.Row="1" Background="LightGray" x:Name="Velocity_Canvas" Margin="5,5,5,5"/>
                <TextBlock Grid.Row="2" Text="-1" x:Name="VelocityMin_TB"  TextWrapping="NoWrap" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="3" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="压&#x000A;&#x000A;强" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
            <Grid Grid.Column="1" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition  Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="2" x:Name="PressureMax_TB" TextWrapping="NoWrap" VerticalAlignment="Bottom"/>
                <Canvas Grid.Row="1" Background="LightGray"  x:Name="Pressure_Canvas" Margin="5,5,5,5"/>
                <TextBlock Grid.Row="2" Text="0" x:Name="PressureMinTextBlock"  TextWrapping="NoWrap" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
