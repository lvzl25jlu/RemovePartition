<Window x:Class="RemovePartition.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RemovePartition"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Margin="10">
            <!--初态参数-->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Label Content="分隔位置"/>
                    <Slider Width="200" Value="50" Maximum="99" Minimum="1" x:Name="PartitionPositionSlider"/>
                </StackPanel>
                <local:LabelTextBox x:Name="LDensityLTB" Grid.Row="1" Grid.Column="0" Label="左侧密度" Text="1"/>
                <local:LabelTextBox x:Name="RDensityLTB" Grid.Row="1" Grid.Column="1" Label="右侧密度" Text="1"/>
                <local:LabelTextBox x:Name="LPressureLTB" Grid.Row="2" Grid.Column="0" Label="左侧压强" Text="1"/>
                <local:LabelTextBox x:Name="RPressureLTB" Grid.Row="2" Grid.Column="1" Label="右侧压强" Text="1"/>
            </Grid>
            <!--网格参数-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Label  Content="Δx" Grid.Row="0"  Grid.Column="0" />
                <TextBox x:Name="Delta_xTextBox"   Grid.Row="0"  Grid.Column="1" Text="0.01" Width="50" IsEnabled="False"/>
                <Label Content="Δt" Grid.Row="1"  Grid.Column="0"/>
                <TextBox x:Name="Delta_tTextBox"  Grid.Row="1"  Grid.Column="1" Text="0.1" Width="50"/>
                <Label Content="CFL" Grid.Row="2"  Grid.Column="0"/>
                <TextBox x:Name="CFL_TextBox" Grid.Row="2"  Grid.Column="1"  Text="0.5" Width="50"/>
            </Grid>
            <!--控制区域-->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Button x:Name="RemoveButton" Grid.Column="0"  Grid.Row="0" Content="移除分隔" Margin="10,1,0,1" Click="RemoveButton_Click"/>
                <Button x:Name="ResetButton" Grid.Column="1"   Grid.Row="0" Content="重置" Margin="10,1,0,1" Click="ResetButton_Click"/>
                <Button x:Name="NextStepButton" Grid.Column="0"  Grid.Row="1" Content="下一步" Margin="10,1,0,1" Click="NextStepButton_Click"/>
                <Button x:Name="NextManyButton" Grid.Column="1"  Grid.Row="1" Content="下几步" Margin="10,1,0,1" Click="NextManyButton_Click"/>
                <Button x:Name="TestButton" Grid.Column="0"  Grid.Row="2" Content="测试" Margin="10,1,0,1" Click="TestButton_Click"/>
                <TextBlock x:Name="StepCountTextBlock" Grid.Column="1"  Grid.Row="2" Margin="10,0,0,0"/>
            </Grid>

        </StackPanel>
        <Grid Grid.Row="1" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="密&#x000A;&#x000A;度" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Grid Grid.Column="1" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition  Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="100" x:Name="DensityMaxTextBlock" TextWrapping="NoWrap" VerticalAlignment="Bottom"/>
                <Canvas Grid.Row="1" Background="LightGray"  x:Name="DensityCanvas" Margin="10,0,10,0"/>
                <TextBlock Grid.Row="2" Text="0" x:Name="DensityMinTextBlock"  TextWrapping="NoWrap" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="压&#x000A;&#x000A;强" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
            <Grid Grid.Column="1" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition  Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="100" x:Name="PressureMaxTextBlock" TextWrapping="NoWrap" VerticalAlignment="Bottom"/>
                <Canvas Grid.Row="1" Background="LightGray"  x:Name="PressureCanvas" Margin="10,0,10,0"/>
                <TextBlock Grid.Row="2" Text="0" x:Name="PressureMinTextBlock"  TextWrapping="NoWrap" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="速&#x000A;&#x000A;度" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0"/>
            <Grid Grid.Column="1" Height="Auto">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition  Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0" Text="100" x:Name="VelocityMaxTextBlock" TextWrapping="NoWrap" VerticalAlignment="Bottom"/>
                <Canvas Grid.Row="1" Background="LightGray" x:Name="VelocityCanvas" Margin="10,0,10,0"/>
                <TextBlock Grid.Row="2" Text="-100" x:Name="VelocityMinTextBlock"  TextWrapping="NoWrap" VerticalAlignment="Top"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
